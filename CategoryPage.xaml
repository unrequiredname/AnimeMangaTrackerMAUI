<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimeMangaTrackerMAUI.CategoryPage"
             Title="Categorii">
    <Grid RowDefinitions="Auto, *">
        <StackLayout Grid.Row="0" Padding="10">
            <Entry Placeholder="Nume Categorie" Text="{Binding Name}" />
            <Button Text="SalveazÄƒ Categoria" Clicked="OnSaveButtonClicked" />
        </StackLayout>

        <ListView x:Name="listView" Grid.Row="1" ItemSelected="OnCategoryViewItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>