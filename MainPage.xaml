<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimeMangaTrackerMAUI.MainPage"
             BackgroundColor="#FFF9FB" >
    <VerticalStackLayout Padding="20"
                         Spacing="15"
                         VerticalOptions="Start">
        <Grid RowSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0"
                    Text="Bine ai venit la Anime &amp; Manga Tracker!"
                    FontSize="32"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    TextColor="#FF69B4"
                    Margin="0,0,0,30" />

            <Button Grid.Row ="1"
                    Text="✨Anime &amp; Manga"
                    FontSize="24"
                    HorizontalOptions="Center"
                    TextColor="#FF69B4"
                    BackgroundColor="White"
                    BorderColor="#FFD1DC"
                    BorderWidth="2"
                    MaximumWidthRequest="200"
                    Clicked="OnMediaItemClicked" />

            <Button Grid.Row ="2"
                    Text="📂Categorii Anime"
                    FontSize="24"
                    HorizontalOptions="Center"
                    TextColor="#FF69B4"
                    BackgroundColor="White"
                    BorderColor="#FFD1DC"
                    BorderWidth="2"
                    MaximumWidthRequest="200"
                    Clicked="OnCategoryClicked" />

            <Button Grid.Row ="3"
                    Text="🚀 Progresul Meu"
                    FontSize="24"
                    HorizontalOptions="Center"
                    TextColor="#FF69B4"
                    BackgroundColor="White"
                    BorderColor="#FFD1DC"
                    BorderWidth="2"
                    MaximumWidthRequest="200"
                    Clicked="OnProgressClicked" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>
