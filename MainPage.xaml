<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimeMangaTrackerMAUI.MainPage"
             BackgroundColor="#FFF9FB">

    <VerticalStackLayout Padding="30" 
                         Spacing="20" 
                         VerticalOptions="Center" 
                         HorizontalOptions="FillAndExpand">

        <Label Text="Bine ai venit la Anime &amp; Manga Tracker!"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"
               TextColor="#FF69B4"
               Margin="0,0,0,40" />

        <Button Text="✨ Anime &amp; Manga"
                FontSize="20"
                TextColor="#FF69B4"
                BackgroundColor="White"
                BorderColor="#FFD1DC"
                BorderWidth="2"
                HeightRequest="70"
                WidthRequest="250"
                CornerRadius="15"
                Clicked="OnMediaItemClicked" />

        <Button Text="📂 Categorii"
                FontSize="20"
                TextColor="#FF69B4"
                BackgroundColor="White"
                BorderColor="#FFD1DC"
                BorderWidth="2"
                HeightRequest="70"
                WidthRequest="250"
                CornerRadius="15"
                Clicked="OnCategoryClicked" />

    </VerticalStackLayout>
</ContentPage>